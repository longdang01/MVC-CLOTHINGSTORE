
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="order-wrap" style="margin-top: 70px; min-height: 100vh" ng-controller="OrderController">
    <div class="payment-breadcrumb">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Đơn hàng của tôi</li>
            </ol>
        </nav>
    </div>
    <div class="container">
        <h3 class="mb-3">Thông tin đơn hàng</h3>
        <div>
            <div ng-repeat="order in orders" class="row fs-5 mb-5" style="padding: 2rem; background: #e2e2e2;">
                <div class="col-md-3">
                    <ul>
                        <li class="mt-3">Mã đơn hàng: {{ order.order_id }}</li>
                        <li class="mt-3">Địa chỉ nhận hàng: {{ order.address }} </li>
                        <li class="mt-3">Tổng tiền: {{ order.total }}</li>
                        <li class="mt-3">Trạng thái đơn hàng: 
                        {{ order.status == 1 ? 'Đang chờ xử lý' : ((order.status == 2) ? 'Đang giao' : 'Đã giao')}}</li>
                        <li class="mt-3">Ngày đặt hàng: {{ order.date_order.slice(0, 10) }}</li>
                    </ul>
                </div>
                <div class="col-md-9">
                    <table style="color: black" class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Serial</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Color</th>
                                <th>Size</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody style="background: #fff">
                            <tr ng-repeat="detail in order.listOrderDetails">
                                <td>{{ $index + 1 }}</td>
                                <td>{{ detail.order_detail_id }}</td>
                                <td>{{ detail.product_name }}</td>
                                <td>
                                    <img style="height: 50px" ng-src="../{{detail.image}}"/>
                                </td>
                                <td>{{ detail.color }}</td>
                                <td>{{ detail.size }}</td>
                                <td>{{ detail.quantity }}</td>
                                <td>{{ detail.price }}</td>

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

