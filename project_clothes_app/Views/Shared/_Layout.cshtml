    <link rel="stylesheet" href="~/assets/css/cart.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
</head>
<body ng-app="App">
    <div class="app">
        @Html.Partial("_Header")

        @Html.Partial("_MiniCart")

        @RenderBody()

        @Html.Partial("_Footer")
    </div>

    <!-- cart -->
    <div id="modal-cart" style="display: none" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header d-flex justify-content-between align-items-center">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title">Cart</h5>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <span>Total</span>
                    <h3>0đ</h3>
                </div>
                <div class="modal-footer row">
                    <button type="button" class="btn btn-dark col">Xem giỏ hàng</button>
                    <button type="button" class="btn btn-dark col">Thanh toán</button>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Scripts/angular.min.js"></script>
    @*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@

    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/assets/core/lib/lightslider-master/dist/js/lightslider.min.js"></script>
    <script src="~/assets/core/lib/own-carousel/dist/owl.carousel.min.js"></script>
    <script src="~/Scripts/dirPagination.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script src="~/Scripts/Controller/app.js"></script>
</body>
</html>