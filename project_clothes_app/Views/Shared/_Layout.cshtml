<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chovis Studio</title>

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/assets/icons/themify-icons/themify-icons.css">

    <link rel="stylesheet" href="~/assets/core/lib/own-carousel/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/core/lib/own-carousel/dist/assets/owl.theme.default.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/css/base.css">
    <link rel="stylesheet" href="~/assets/css/shop.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
</head>
<body ng-app="App">
    <div class="app">
        @Html.Partial("_Header")

        @RenderBody()

        @Html.Partial("_Footer")
    </div>

    <!-- cartt -->
    <div id="modal-cart" style="display: none" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header d-flex justify-content-between align-items-center">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title">Cart</h5>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <span>Total</span>
                    <h3>0đ</h3>
                </div>
                <div class="modal-footer row">
                    <button type="button" class="btn btn-dark col">Xem giỏ hàng</button>
                    <button type="button" class="btn btn-dark col">Thanh toán</button>
                </div>
            </div>
        </div>
    </div>

    <!-- login -->
    <div class="modal-login modal">
        <div class="modal-content">
            <a href="#" class="btn-close-modal"><i class="fas fa-times"></i></a>
            <h3 class="modal-content-title title">Đăng nhập</h3>

            <form action="#" >
                <div class="content-email">
                    <input class="txt-user email" type="text" ng-model="username" placeholder="Địa chỉ email" required>
                    <i class="far fa-envelope"></i>
                </div>
                <div class="content-password">
                    <input class="txt-user password" type="password" ng-model="password" placeholder="Mật khẩu" required>
                    <i class="fas fa-lock"></i>
                </div>
                <div class="options-pass">
                    <input type="checkbox" id="remember"><label for="remember" ng-model="remember" class="lbl-remember">Nhớ mật khẩu</label>
                    <a href="#" class="btn-forget">Quên mật khẩu</a>
                </div>
                <button type="submit" ng-click="Login(username, password, remember)" class="btn btn-login-submit">Đăng nhập</button>
                <h3 class="title-separate">Hoặc</h3>
                <a href="#" class="login-facebook login-option"><span>Đăng nhập với Facebook</span><i class="fab fa-facebook-square"></i></a>
                <a href="#" class="login-google login-option"><span>Đăng nhập với Google</span><i class="fab fa-google"></i></a>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/assets/core/lib/lightslider-master/dist/js/lightslider.min.js"></script>
    <script src="~/assets/core/lib/own-carousel/dist/owl.carousel.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/dirPagination.js"></script>
    <script src="~/assets/js/main.js"></script>
    @*<script src="~/Scripts/app.js"></script>*@
    <script src="~/Scripts/Controller/app.js"></script>
</body>
</html>