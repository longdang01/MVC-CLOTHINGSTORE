
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" ng-controller="RegisterController">
    <div style="margin-top: 70px; margin-bottom:20px; min-height: 565px" class="row">
        <div class="col-md-6" style="padding: 3rem 0 0 0">
            <h3 style="margin-bottom: 1rem">Register</h3>
            <p style="color: grey; margin-bottom: 3rem; font-size: 1.4rem">Register to have a shopping account at Chovis</p>
            <div style="width: 80%">
                <div>
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input ng-model="username"
                               style="height: 40px; font-size: 1.4rem"
                               type="text" class="form-control" placeholder="Enter your username ..." required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input ng-model="name"
                               style="height: 40px; font-size: 1.4rem"
                               type="text" class="form-control" placeholder="Enter your name ..." required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input ng-model="phone_number"
                               style="height: 40px; font-size: 1.4rem"
                               type="text" class="form-control" placeholder="Enter your phone number ..." required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input ng-model="password"
                               style="height: 40px; font-size: 1.4rem"
                               type="password" class="form-control" placeholder="Enter your password ..." required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm password</label>
                        <input style="height: 40px; font-size: 1.4rem"
                               type="password" class="form-control" placeholder="Confirm your password ..." required>
                    </div>
                </div>
                <button ng-click="Register(username, name, phone_number, password)"
                        style="width: 100%; margin-top: .2rem" 
                        class="btn btn-dark">Register</button>
            </div>
            <div style="margin: 2rem 0">Or</div>
            <div>
                <ul class="d-flex align-item-center">
                    <li class="me-3">
                        <a href="#" class="socials-login" style="
                                    color: #fff;
                                    background: #2374e1;
                                    ">
                            <i class="ti-facebook"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="socials-login"
                           style="color: #fff; background : var(--primaryColor);"><i class="fab fa-google"></i></a>
                    </li>
                </ul>
                <div class="mt-5">Do you already have an account? <a href="/User/Login" style="color: var(--primaryColor)">Login here</a></div>

            </div>
        </div>
        <div class="col-md-6">
            <img style="width: 100%; height: 100%; object-fit: cover" src="~/assets/images/shop.jpg" alt="Alternate Text" />
        </div>
    </div>
</div>



